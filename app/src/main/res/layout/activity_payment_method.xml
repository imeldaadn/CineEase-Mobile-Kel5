<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".PaymentMethod">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            android:id="@+id/btn_back"
            layout="@layout/layout_back_button" />

        <TextView
            android:id="@+id/tv_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/payment_method"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_payment_method"
            app:strokeColor="@color/red"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:paddingHorizontal="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_movie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Black Panther: Wakanda Forever"/>

                <TextView
                    android:id="@+id/tv_lokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:text="AKZ Cineplex, Bandung || Minggu, 24 April 2022"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_detail_transaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_lokasi"
            app:strokeColor="@color/red"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="18sp"
                    android:text="Detail Transaksi"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_jumlah_tiket"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="5 TIKET"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/list_tiket"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="B5, B6, B7"
                        android:gravity="end"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_kursi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="KURSI REGULER"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/harga_tiket"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="Rp. 25000 x 5"
                        android:gravity="end"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_ewallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textSize="18sp"
            android:layout_marginStart="30dp"
            android:text="E-Wallet"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cv_detail_transaksi"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/dark_red"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_ewallet">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp">

                <ImageView
                    android:id="@+id/iv_cash"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_money"/>

                <TextView
                    android:id="@+id/tv_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@id/iv_cash"
                    app:layout_constraintBottom_toBottomOf="@id/iv_cash"
                    app:layout_constraintStart_toEndOf="@id/iv_cash"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_bawah"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_gopay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/dark_red"
            app:cardCornerRadius="10dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/tv_ewallet">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp">

                <ImageView
                    android:id="@+id/iv_gopay"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/iv_ewallet"/>

                <TextView
                    android:id="@+id/tv_gopay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GoPay"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@id/iv_gopay"
                    app:layout_constraintStart_toEndOf="@id/iv_gopay"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08123456789"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/tv_gopay"
                    app:layout_constraintStart_toEndOf="@id/iv_gopay"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_bawah"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textSize="18sp"
            android:layout_marginStart="30dp"
            android:text="Coupon"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cv_gopay"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/dark_red"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_coupon">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/tv_coupon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekend CineEase Discount"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50% Off"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/tv_coupon_name"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_bawah"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_total_seats"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"
            android:gravity="bottom"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/cv_coupon"
            app:layout_constraintBottom_toTopOf="@id/tv_total_price"
            app:layout_constraintEnd_toStartOf="@id/btn_book_ticket"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="5 Seats" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_bold"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_book_ticket"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Rp. 125.000,00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_book_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Book Ticket"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tv_total_price"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>