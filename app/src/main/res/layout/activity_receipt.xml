<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiptActivity">

    <include
        android:id="@+id/btn_back"
        layout="@layout/layout_back_button" />

    <TextView
        android:id="@+id/tv_struk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/inter_bold"
        android:text="Struk Pembelian"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cetak_struk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_bold"
        android:text="Cetak struk pembelian untuk tiket dan snack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_struk" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_struk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="60dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/red"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_cetak_struk">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="250dp"
            android:orientation="vertical"
            android:padding="30dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AKZ Cineplex, Bandung"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---------------------------"
                android:maxLines="1"
                android:textSize="18sp"
                android:fontFamily="@font/inter_semibold"/>
            <TextView
                android:id="@+id/tv_judul_film"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVENGERS:ENDGAME"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVENGERS:ENDGAME"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVENGERS:ENDGAME"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"/>
            <TextView
                android:id="@+id/tv_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVENGERS:ENDGAME"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVENGERS:ENDGAME"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cv_struk"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.button.MaterialButton
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cetak Struk"
            android:textColor="@color/white"
            app:strokeColor="@color/red"
            app:strokeWidth="2dp"
            app:backgroundTint="@android:color/transparent"
            android:layout_marginHorizontal="30dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_selesai"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Selesai"
            android:textColor="@color/white"
            app:strokeColor="@color/red"
            app:strokeWidth="2dp"
            app:backgroundTint="@android:color/transparent"
            android:layout_marginHorizontal="30dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>