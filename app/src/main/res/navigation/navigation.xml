<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cineease.movie.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_posFragment"
            app:destination="@id/posFragment" />
        <action
            android:id="@+id/action_homeFragment_to_snackFragment"
            app:destination="@id/snackFragment" />
    </fragment>
    <fragment
        android:id="@+id/posFragment"
        android:name="com.example.cineease.pos.PosFragment"
        android:label="fragment_pos"
        tools:layout="@layout/fragment_pos" >
        <action
            android:id="@+id/action_posFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_posFragment_to_snackFragment"
            app:destination="@id/snackFragment" />
    </fragment>
    <fragment
        android:id="@+id/snackFragment"
        android:name="com.example.cineease.snack.SnackFragment"
        android:label="fragment_snack"
        tools:layout="@layout/fragment_snack" >
        <action
            android:id="@+id/action_snackFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_snackFragment_to_posFragment"
            app:destination="@id/posFragment" />
    </fragment>
</navigation>